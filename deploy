# deploy after all tests run

mvn help:effective-pom -P scala2.10 -Dexclude -Doutput=tmp.pom
mvn -DskipTests -f tmp.pom -P scala2.10 -Dexclude clean source:jar scala:doc-jar package deploy || { exit 1; }

mvn help:effective-pom -DskipTests -P scala2.9 -Doutput=tmp.pom
mvn -f tmp.pom -DskipTests -P scala2.9 clean source:jar scala:doc-jar package deploy || { exit 1; }

rm tmp.pom
