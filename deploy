# deploy after all tests run

mvn help:effective-pom -P scala2.10,sonatype-deploy -Dexclude -Doutput=tmp.pom
mvn -DskipTests -f tmp.pom -P scala2.10,sonatype-deploy -Dexclude clean source:jar scala:doc-jar package deploy || { exit 1; }

mvn help:effective-pom -DskipTests -P scala2.9,sonatype-deploy -Doutput=tmp.pom
mvn -f tmp.pom -DskipTests -P scala2.9,sonatype-deploy clean source:jar scala:doc-jar package deploy || { exit 1; }

rm tmp.pom
